<h1>Post Board</h1>

<% if logged_in? %>
  <%= link_to "Logout", logout_path %>
<% else %>
  <%= link_to "Login", login_path %>
<% end %>

<% @posts.each do |post| %>
  <ul>
    <li>
      <%= post.body %> | 
      <% if logged_in? %>
        <%= post.user.name %> 
      <% else %>
        <%= "Anonymous" %>
      <% end %>
    </li>
  </ul>
<% end %>

<%= link_to "New Post", new_post_path %>
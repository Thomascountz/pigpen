<h1>New Post</h1>

<div class="container">
  

  <%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 5, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit Post", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  
</div>